<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppSalud.Views.PerfilProfesionalesPage"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="FillAndExpand">
            <!-- Barra de bÃºsqueda con borde redondeado, centrada -->
            <Frame BackgroundColor="#FFFFFF"
          HasShadow="True"
          Margin="0,0,0,20">
                <Grid>
                    <Entry Placeholder="ðŸ”Ž Buscar por nombre, especialidad, ciudad"
                  Text="{Binding TextoBusqueda, Mode=TwoWay}"
                  TextChanged="OnFilterChanged"
                  FontSize="15"
                  PlaceholderColor="Black"
                  TextColor="#01304C"
                  BackgroundColor="Transparent"
                  HeightRequest="45" />
                    <Image Source="iconobuscar.png" HorizontalOptions="End" VerticalOptions="Center" Margin="10,0" />
                </Grid>
            </Frame>

            <!-- Filtros elegantes con botones de limpieza -->
            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" VerticalOptions="Start" Margin="0,0,0,0">

                <!-- Especialidad -->
                <Picker Title="Especialidad"
               ItemsSource="{Binding Especialidades}"
               SelectedItem="{Binding EspecialidadSeleccionada, Mode=TwoWay}"
               SelectedIndexChanged="OnFilterChanged"
               BackgroundColor="#FFFFFF"
               TextColor="#01304C"
               Grid.Column="0"
               Margin="0,10,10,0"
               HeightRequest="72" />
                <Button Text="X"
               Command="{Binding ClearFieldCommand}"
               CommandParameter="Especialidad"       
               IsVisible="{Binding EspecialidadSeleccionada}"
               BackgroundColor="Transparent"
               TextColor="Red"
               BorderColor="Red"        
               BorderWidth="1"
               CornerRadius="80"
               FontSize="Medium"
               WidthRequest="50"
               HeightRequest="45"
               Margin="10,20,0,0"
               Grid.Column="1" VerticalOptions="Center" />

                <!-- Departamento -->
                <Picker Title="Departamento"
               ItemsSource="{Binding Departamentos}"
               SelectedItem="{Binding DepartamentoSeleccionado, Mode=TwoWay}"
               SelectedIndexChanged="OnFilterChanged"
               BackgroundColor="#FFFFFF"
               TextColor="#01304C"
               Grid.Row="1"
               Grid.Column="0"
               Margin="0,10,10,0"
               HeightRequest="72" />
                <Button Text="X"
               Command="{Binding ClearFieldCommand}"
               CommandParameter="Departamento"
               IsVisible="{Binding DepartamentoSeleccionado}"
               BackgroundColor="Transparent"
               TextColor="Red"
               BorderColor="Red"        
               BorderWidth="1"
               CornerRadius="80"
               FontSize="Medium"
               WidthRequest="50"
               HeightRequest="45"
               Margin="10,20,0,0"
               Grid.Row="1"
               Grid.Column="1" VerticalOptions="Center" />

                <!-- Ciudad -->
                <Picker Title="Ciudad"
               ItemsSource="{Binding Ciudades}"
               SelectedItem="{Binding CiudadSeleccionada, Mode=TwoWay}"
               SelectedIndexChanged="OnFilterChanged"
               BackgroundColor="#FFFFFF"
               TextColor="#01304C"
               Grid.Row="2"
               Grid.Column="0"
               Margin="0,10,10,0"
               HeightRequest="72" />
                <Button Text="X"
               CommandParameter="Ciudad"
               Command="{Binding ClearFieldCommand}"
               IsVisible="{Binding CiudadSeleccionada}"
               BackgroundColor="Transparent"
               CornerRadius="80"
               TextColor="Red"
               BorderColor="Red"        
               BorderWidth="1"
               FontSize="Medium"
               WidthRequest="50"
               HeightRequest="45"
               Margin="10,20,0,0"
               Grid.Row="2"
               Grid.Column="1" VerticalOptions="Center" />
            </Grid>

            <!-- Lista de profesionales con diseÃ±o tipo tarjeta moderna -->
            <CollectionView ItemsSource="{Binding Profesionales}"
                            VerticalOptions="FillAndExpand"
                            BackgroundColor="Transparent"
                            Margin="0,0,0,10">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="1" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="White"
                               CornerRadius="20"
                               HasShadow="True"
                               Margin="10"
                               Padding="10">
                            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto, Auto">
                                <!-- Imagen del profesional -->
                                <Image Source="{Binding FotoPerfil}" 
                                       WidthRequest="50" 
                                       HeightRequest="50" 
                                       Aspect="AspectFill" 
                                       VerticalOptions="Start" 
                                       HorizontalOptions="Start" 
                                       Margin="0,0,10,0"
                                       Grid.RowSpan="2"/>

                                <!-- Nombre del doctor o clÃ­nica -->
                                <Label Text="{Binding NombreCompleto}" 
                                       FontAttributes="Bold"
                                       FontSize="18" 
                                       TextColor="Black" 
                                       Grid.Column="1"/>

                                <!-- Especialidad -->
                                <Label Text="{Binding Especialidad}" 
                                       FontSize="14" 
                                       TextColor="#6B7280" 
                                       Grid.Column="1" 
                                       Grid.Row="1"/>

                                <!-- Enlace "Ver mÃ¡s..." -->
                                <Label Text="Ver mÃ¡s..."
                                       TextColor="#01304C"
                                       FontAttributes="Italic"
                                       FontSize="14"
                                       Grid.Column="1"
                                       Grid.Row="2"
                                       VerticalOptions="End"
                                       HorizontalOptions="Start"
                                       Margin="0,10,0,0">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.VerMasCommand}"
                                                              CommandParameter="{Binding .}" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
